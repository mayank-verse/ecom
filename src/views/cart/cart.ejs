<%- include('../partials/navbar') %>

<div class="container mx-auto my-10">
  <h1 class="text-3xl font-bold mb-6">Your Cart</h1>

  <% if(cartItems.length === 0) { %>
    <p class="text-gray-700">Your cart is empty!</p>
  <% } else { %>
    <div class="overflow-x-auto">
      <table class="w-full table-auto border-collapse">
        <thead>
          <tr class="bg-gray-200">
            <th class="px-4 py-2">Product</th>
            <th class="px-4 py-2">Price</th>
            <th class="px-4 py-2">Quantity</th>
            <th class="px-4 py-2">Total</th>
            <th class="px-4 py-2">Action</th>
          </tr>
        </thead>
        <tbody>
          <% let grandTotal = 0; %>
          <% cartItems.forEach(item => { %>
            <% let total = item.price * item.quantity; grandTotal += total; %>
            <tr class="border-b">
              <td class="px-4 py-2"><%= item.name %></td>
              <td class="px-4 py-2">$<%= item.price %></td>
              <td class="px-4 py-2"><%= item.quantity %></td>
              <td class="px-4 py-2">$<%= total %></td>
              <td class="px-4 py-2">
                <form action="/cart/remove/<%= item.product_id %>" method="POST">
                  <button class="bg-red-600 text-white py-1 px-3 rounded hover:bg-red-700">Remove</button>
                </form>
              </td>
            </tr>
          <% }) %>
          <tr>
            <td colspan="3" class="px-4 py-2 font-bold text-right">Grand Total:</td>
            <td colspan="2" class="px-4 py-2 font-bold">$<%= grandTotal %></td>
          </tr>
        </tbody>
      </table>
    </div>

    <a href="/orders/checkout" class="mt-4 inline-block bg-green-600 text-white py-2 px-6 rounded hover:bg-green-700">Proceed to Checkout</a>
  <% } %>
</div>

<%- include('../partials/footer') %>
