<%- include('../../partials/admin-navbar') %>

<div class="container mx-auto my-10">
  <h1 class="text-4xl font-bold mb-8 text-gray-800"><%= title %></h1>

  <% if (success_msg && success_msg.length > 0) { %>
    <div class="flash-success flash-message"><%= success_msg %></div>
  <% } %>
  <% if (error_msg && error_msg.length > 0) { %>
    <div class="flash-error flash-message"><%= error_msg %></div>
  <% } %>

  <div class="bg-white p-8 rounded-lg shadow-2xl mb-10">
    <h2 class="text-2xl font-semibold mb-4 text-red-500">Customer Details</h2>
    <div class="grid grid-cols-2 gap-4 mb-6">
        <p><strong>Customer Name:</strong> <%= order.user_name %></p>
        <p><strong>Customer Email:</strong> <%= order.user_email %></p>
    </div>

    <hr class="my-6 border-gray-200">

    <h2 class="text-2xl font-semibold mb-4 text-gray-700">Order Summary</h2>
    <div class="grid grid-cols-3 gap-4 text-lg">
      <p><strong>Order ID:</strong> #<%= order.order_id %></p>
      <p><strong>Total Amount:</strong> <span class="price-display">$<%= parseFloat(order.total_amount).toFixed(2) %></span></p>
      <p><strong>Placed On:</strong> <%= order.created_at.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) %></p>
    </div>
    
    <hr class="my-6 border-gray-200">

    <h2 class="text-2xl font-semibold mb-4 text-gray-700">Update Status</h2>
    <form action="/admin/orders/<%= order.order_id %>/update-status" method="POST" class="flex items-center space-x-4">
        <label for="status" class="font-semibold text-lg">Current Status:</label>
        <select name="status" id="status" class="border border-gray-300 p-2 rounded focus:ring-blue-500 focus:border-blue-500 text-lg">
            <% statusOptions.forEach(statusOpt => { %>
                <option value="<%= statusOpt %>" <%= order.status === statusOpt ? 'selected' : '' %>>
                    <%= statusOpt.toUpperCase() %>
                </option>
            <% }) %>
        </select>
        <button type="submit" class="bg-blue-600 text-white font-semibold py-2 px-6 rounded-lg hover:bg-blue-700">
            Save Status
        </button>
    </form>
  </div>

  <h2 class="text-2xl font-semibold mb-4 text-gray-700">Items in Order</h2>

  <div class="overflow-x-auto bg-white shadow-xl rounded-lg">
    <table class="w-full table-auto">
      <thead>
        <tr>
          <th class="px-4 py-3 text-left">Product Name</th>
          <th class="px-4 py-3 text-left">Price (at time of order)</th>
          <th class="px-4 py-3 text-center">Quantity</th>
          <th class="px-4 py-3 text-left">Subtotal</th>
        </tr>
      </thead>
      <tbody>
        <% items.forEach(item => { %>
        <% const subtotal = parseFloat(item.price) * item.quantity; %>
        <tr class="border-b hover:bg-gray-50">
          <td class="px-4 py-4 font-semibold">
            <a href="/products/<%= item.product_id %>" class="text-blue-600 hover:text-blue-800">
              <%= item.name %>
            </a>
          </td>
          <td class="px-4 py-4">$<%= parseFloat(item.price).toFixed(2) %></td>
          <td class="px-4 py-4 text-center"><%= item.quantity %></td>
          <td class="px-4 py-4 font-bold">$<%= subtotal.toFixed(2) %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <div class="mt-8">
    <a href="/admin/orders" class="bg-gray-600 text-white font-semibold py-3 px-8 rounded-lg hover:bg-gray-700 transition duration-300">
        ‚Üê Back to Order List
    </a>
  </div>
</div>

<%- include('../../partials/footer') %>
