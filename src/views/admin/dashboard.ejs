<%- include('../partials/admin-navbar') %>

<div class="container mx-auto my-10">
  <h1 class="text-4xl font-bold mb-8 text-gray-800"><%= title %></h1>
  
  <% if (success_msg && success_msg.length > 0) { %>
    <div class="flash-success flash-message"><%= success_msg %></div>
  <% } %>
  <% if (error_msg && error_msg.length > 0) { %>
    <div class="flash-error flash-message"><%= error_msg %></div>
  <% } %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div class="bg-white p-6 rounded-lg shadow-xl border-t-4 border-blue-500">
      <h2 class="text-2xl font-semibold mb-3">Product Management</h2>
      <p class="text-gray-600 mb-4">Add, edit, and delete items from your 
store catalog.</p>
      <a href="/admin/products" class="btn-primary btn">Manage Products →</a>
    </div>

    <div class="bg-white p-6 rounded-lg shadow-xl border-t-4 border-green-500">
      <h2 class="text-2xl font-semibold mb-3">Order Management</h2>
      <p class="text-gray-600 mb-4">View and update the status of all customer orders.</p>
      <a href="/admin/orders" class="bg-green-600 text-white btn py-2 px-4 rounded-lg hover:bg-green-700">Manage Orders →</a>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>