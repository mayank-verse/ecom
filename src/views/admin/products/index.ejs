<%- include('../partials/admin-navbar') %>

<div class="container mx-auto my-10">
  <h1 class="text-4xl font-bold mb-4 text-gray-800"><%= title %></h1>
  
  <% if (success_msg && success_msg.length > 0) { %>
    <div class="flash-success flash-message"><%= success_msg %></div>
  <% } %>
  <% if (error_msg && error_msg.length > 0) { %>
    <div class="flash-error flash-message"><%= error_msg %></div>
  <% } %>

  <div class="flex justify-end mb-6">
    <a href="/admin/products/add" class="bg-blue-600 text-white font-semibold py-2 px-6 rounded-lg hover:bg-blue-700">
        + Add New Product
    </a>
  </div>

  <div class="overflow-x-auto bg-white shadow-xl rounded-lg">
    <table class="w-full table-auto">
      <thead>
        <tr>
          <th class="px-4 py-3 text-left">ID</th>
          <th class="px-4 py-3 text-left">Name</th>
          <th class="px-4 py-3 text-left">Price</th>
          <th class="px-4 py-3 text-center">Stock</th>
          <th class="px-4 py-3 text-left">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% products.forEach(product => { %>
          <tr class="border-b hover:bg-gray-50">
            <td class="px-4 py-4 text-sm text-gray-500"><%= product.product_id %></td>
            <td class="px-4 py-4 font-semibold"><%= product.name %></td>
            <td class="px-4 py-4 price-display">$<%= product.price.toFixed(2) %></td>
            <td class="px-4 py-4 text-center <%= product.stock < 10 ? 'text-red-500 font-bold' : 'text-green-600' %>">
                <%= product.stock %>
            </td>
            <td class="px-4 py-4 flex space-x-3">
              <a href="/admin/products/edit/<%= product.product_id %>" class="text-blue-600 hover:text-blue-800 font-semibold">Edit</a>
              <form action="/admin/products/delete/<%= product.product_id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete <%= product.name %>?');">
                <button type="submit" class="text-red-600 hover:text-red-800 font-semibold">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>

<%- include('../../partials/footer') %>