<%- include('../partials/navbar') %>

<div class="container mx-auto my-10 flex flex-col md:flex-row gap-8">
  <img src="<%= product.image || '/images/default.png' %>" class="w-full md:w-1/2 h-96 object-cover rounded-lg" alt="<%= product.name %>">
  <div class="flex-1 flex flex-col">
    <h1 class="text-3xl font-bold mb-4"><%= product.name %></h1>
    <span class="text-2xl text-blue-600 font-semibold mb-4">$<%= product.price %></span>
    <p class="text-gray-700 mb-6"><%= product.description %></p>

    <form action="/cart/add/<%= product.product_id %>" method="POST">
      <button class="bg-blue-600 text-white py-2 px-4 rounded hover:bg-blue-700">Add to Cart</button>
    </form>
  </div>
</div>

<%- include('../partials/footer') %>
