<%- include('../partials/navbar') %>

<div class="container mx-auto my-10">
  <h1 class="text-4xl font-bold mb-8 text-gray-800"><%= title %></h1>

  <div class="bg-white p-8 rounded-lg shadow-xl mb-8">
    <h2 class="text-2xl font-semibold mb-4 text-gray-700">Order Information</h2>
    <div class="grid grid-cols-2 gap-4 text-lg">
      <p><strong>Total Amount:</strong> <span class="price-display">$<%= parseFloat(order.total_amount).toFixed(2) %></span></p>
      <p><strong>Status:</strong> 
        <span class="font-bold <%= order.status === 'pending' ? 'text-orange-500' : 'text-green-600' %>">
            <%= order.status.toUpperCase() %>
        </span>
      </p>
      <p><strong>Placed On:</strong> <%= order.created_at.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric', hour: '2-digit', minute: '2-digit' }) %></p>
      <p><strong>Payment ID:</strong> <%= order.order_id %></p>
    </div>
  </div>

  <h2 class="text-2xl font-semibold mb-4 text-gray-700">Items Ordered</h2>

  <div class="overflow-x-auto bg-white shadow-xl rounded-lg">
    <table class="w-full table-auto">
      <thead>
        <tr>
          <th class="px-4 py-3 text-left">Product</th>
          <th class="px-4 py-3 text-left">Price</th>
          <th class="px-4 py-3 text-center">Quantity</th>
          <th class="px-4 py-3 text-left">Subtotal</th>
        </tr>
      </thead>
      <tbody>
        <% items.forEach(item => { %>
        <% const subtotal = parseFloat(item.price) * item.quantity; %>
        <tr class="border-b hover:bg-gray-50">
          <td class="px-4 py-4 font-semibold">
            <a href="/products/<%= item.product_id %>" class="text-blue-600 hover:text-blue-800">
              <%= item.name %>
            </a>
          </td>
          <td class="px-4 py-4">$<%= parseFloat(item.price).toFixed(2) %></td>
          <td class="px-4 py-4 text-center"><%= item.quantity %></td>
          <td class="px-4 py-4 font-bold">$<%= subtotal.toFixed(2) %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <div class="mt-8">
    <a href="/orders/history" class="bg-gray-600 text-white font-semibold py-3 px-8 rounded-lg hover:bg-gray-700 transition duration-300">
        ‚Üê Back to Order History
    </a>
  </div>
</div>

<%- include('../partials/footer') %>